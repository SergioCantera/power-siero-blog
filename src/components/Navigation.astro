---
import HomeIcon from './HomeIcon.astro'
import BlogIcon from './BlogIcon.astro'
import AboutIcon from './AboutIcon.astro'
---

<nav
  class="mx-auto flex h-12 w-fit items-center justify-center gap-x-2 rounded-b-md bg-white px-12 shadow-md">
  <a
    href="/"
    class="rounded-md px-2 py-1 text-sm uppercase tracking-wider transition hover:bg-zinc-100 hover:text-fuchsia-500 hover:shadow-md"
    ><span class="flex items-center gap-x-1">
      <HomeIcon />Home</span
    >
  </a>
  <a
    href="/about"
    class="rounded-md px-2 py-1 text-sm uppercase tracking-wider transition hover:bg-zinc-100 hover:text-fuchsia-500 hover:shadow-md"
    ><span class="flex items-center gap-x-1">
      <AboutIcon/>About me</span
    >
  </a>
  <a
    href="/blog"
    class="rounded-md px-2 py-1 text-sm uppercase tracking-wider transition hover:bg-zinc-100 hover:text-fuchsia-500 hover:shadow-md"
    ><span class="flex items-center gap-x-1"
      ><BlogIcon/>Blog
    </span>
  </a>
</nav>
