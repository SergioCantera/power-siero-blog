---
import { dateTimeFormat } from 'node_modules/astro/dist/core/logger/core'

export interface Props {
  class?: string
  title: string
  key: string
  metadata: {
    description: string
    url:string
    events: {
      title: string
      metadata: {
        start_date: string
        end_date: string
      }
    }[]
  }
}

const {title, metadata} = Astro.props
const year = new Date(metadata.events[0].metadata.start_date).getFullYear()
const eventTitle = metadata.events[0].title
---

<div class=`p-6 max-w-[500px] mx-0 my-auto ${Astro.props.class}`>
  <h1 class="text-2xl font-bold">{year}</h1>
  <h2 class="text-xl mt-1 font-semibold">{eventTitle}</h2>
  <a href={metadata.url} target="_blank" rel="noopener noreferrer" class="cursor-pointer font-normal text-base mt-2 hover:text-[#4f39fa]">{title}</a>
</div>